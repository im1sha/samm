<Window x:Class="WpfSaimmodOne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSaimmodOne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label Content="multiplier" HorizontalAlignment="Left" Margin="25,12,0,0" VerticalAlignment="Top"/>
        <TextBox Name="_multiplier" Text="3"  PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="25,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Label Content="initial Value" HorizontalAlignment="Left" Margin="222,12,0,0" VerticalAlignment="Top"/>
        <TextBox Name="_initialValue" Text="1" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="222,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Label Content="divider" HorizontalAlignment="Left" Margin="428,12,0,0" VerticalAlignment="Top"/>
        <TextBox Name="_divider"  Text="5" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Height="23" Margin="429,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button Background="White"  Content="calculate" Click="Calculate" HorizontalAlignment="Left" Margin="612,28,0,0" VerticalAlignment="Top" Width="110"/>

        <StackPanel Name="_panel" Orientation="Horizontal" Background="AliceBlue" FlowDirection="LeftToRight"  Margin="25,89,25,25"/>

    </Grid>
</Window>
